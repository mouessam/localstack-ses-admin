{
  "name": "localstack-ses-admin",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "clean": "npm run clean --workspaces --if-present",
    "build": "npm run build --workspaces --if-present",
    "dev": "npm run dev --workspaces --if-present",
    "dev:server": "npm run dev -w @ses-admin/server",
    "dev:ui": "npm run dev -w @ses-admin/ui",
    "lint": "npm run lint --workspaces && npm run lint:imports",
    "lint:imports": "node packages/build-tools/check-no-relative-imports.cjs",
    "typecheck": "npm run typecheck --workspaces",
    "test": "npm run test --workspaces",
    "test:coverage": "npm run test:coverage --workspaces"
  },
  "devDependencies": {
    "@eslint/js": "9.35.0",
    "@typescript-eslint/eslint-plugin": "8.43.0",
    "@typescript-eslint/parser": "8.43.0",
    "c8": "^10.1.3",
    "eslint": "9.35.0",
    "eslint-config-prettier": "9.1.2",
    "prettier": "3.6.2",
    "tsx": "^4.21.0",
    "typescript": "5.8.3"
  }
}
