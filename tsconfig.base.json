{
  "compilerOptions": {
    "target": "ES2019",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "incremental": true,
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "resolveJsonModule": true,
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "@ses-admin/shared": ["./packages/shared/src"],
      "@ses-admin/shared/*": ["./packages/shared/src/*"],
      "@ses-admin/server": ["./packages/server/src"],
      "@ses-admin/server/*": ["./packages/server/src/*"],
      "@ses-admin/ui": ["./packages/ui/src"],
      "@ses-admin/ui/*": ["./packages/ui/src/*"]
    }
  }
}
