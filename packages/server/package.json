{
  "name": "@ses-admin/server",
  "version": "1.0.0",
  "main": "dist/main.js",
  "scripts": {
    "clean": "rm -rf dist *.tsbuildinfo",
    "prebuild": "npm run clean",
    "build": "tsc -p tsconfig.json --noEmit && node esbuild.config.js",
    "dev": "NODE_ENV=development tsx watch --env-file=../../.env src/main.ts",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "lint": "eslint \"src/**/*.ts\" \"test/**/*.ts\"",
    "test": "node --test --import tsx $(find test -type f -name '*.test.ts' | sort)",
    "test:coverage": "c8 --include 'src/**/*.ts' --exclude 'test/**/*.ts' --reporter=text --reporter=lcov --reporter=json-summary --check-coverage --lines 80 node --test --import tsx $(find test -type f -name '*.test.ts' | sort)"
  },
  "dependencies": {
    "@aws-sdk/client-ses": "3.975.0",
    "@fastify/busboy": "3.2.0",
    "@fastify/static": "8.2.0",
    "@ses-admin/shared": "*",
    "fastify": "5.6.0",
    "nodemailer": "7.0.6",
    "undici": "7.20.0",
    "zod": "4.1.5"
  },
  "devDependencies": {
    "@ses-admin/build-tools": "*",
    "@types/node": "24.3.1",
    "aws-sdk-client-mock": "^3.0.0",
    "c8": "^10.1.2",
    "form-data": "4.0.5",
    "tsx": "4.20.5",
    "typescript": "5.8.3"
  }
}
