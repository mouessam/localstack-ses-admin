{
  "name": "@ses-admin/ui",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "clean": "rm -rf dist *.tsbuildinfo",
    "prebuild": "npm run clean",
    "build": "tsc -p tsconfig.json --noEmit && node esbuild.config.js",
    "dev": "node esbuild.config.js --watch",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "lint": "eslint \"src/**/*.{ts,tsx}\"",
    "test": "node --test --import tsx $(find test -type f -name '*.test.ts' | sort)",
    "test:coverage": "c8 --include 'src/**/*.{ts,tsx}' --exclude 'test/**/*.{ts,tsx}' --reporter=text --reporter=lcov --reporter=json-summary --check-coverage --lines 80 node --test --import tsx $(find test -type f -name '*.test.ts' | sort)"
  },
  "dependencies": {
    "@ses-admin/shared": "*",
    "react": "19.1.1",
    "react-dom": "19.1.1"
  },
  "devDependencies": {
    "@ses-admin/build-tools": "*",
    "@types/react": "19.1.12",
    "@types/react-dom": "19.1.9",
    "autoprefixer": "^10.4.24",
    "c8": "^10.1.2",
    "clsx": "^2.1.1",
    "esbuild": "0.25.9",
    "postcss": "^8.5.6",
    "tailwind-merge": "^2.6.1",
    "tailwindcss": "^3.4.19",
    "tsx": "4.20.5",
    "typescript": "5.8.3"
  }
}
