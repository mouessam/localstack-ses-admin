{
  "name": "@ses-admin/shared",
  "version": "1.0.0",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "clean": "rm -rf dist *.tsbuildinfo",
    "prebuild": "npm run clean",
    "build": "tsc -p tsconfig.json",
    "dev": "tsc -p tsconfig.json --watch",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "lint": "eslint \"src/**/*.ts\" \"test/**/*.ts\"",
    "test": "node --test --import tsx $(find test -type f -name '*.test.ts' | sort)",
    "test:coverage": "c8 --include 'src/**/*.ts' --exclude 'test/**/*.ts' --reporter=text --reporter=lcov --reporter=json-summary --check-coverage --lines 80 node --test --import tsx $(find test -type f -name '*.test.ts' | sort)"
  },
  "dependencies": {
    "zod": "4.1.5"
  },
  "devDependencies": {
    "c8": "^10.1.2",
    "tsx": "4.20.5",
    "typescript": "5.8.3"
  }
}
